    <a href="Uranus.aspx"><img src="pics/uranus.jpg" class="avatar" alt="Uranus" title="Uranus"/></a>
    <a href="Neptune.aspx"><img src="pics/neptune.jpg" class="avatar" alt="Neptune" title="Neptune"/></a>
    <% } %>
